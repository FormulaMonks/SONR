#!/bin/bash
# The logic to start up your application should be put in this
# script. The application will work only if it binds to
# $OPENSHIFT_DIY_IP:8080
#nohup $OPENSHIFT_REPO_DIR/diy/testrubyserver.rb $OPENSHIFT_DIY_IP $OPENSHIFT_REPO_DIR/diy > $OPENSHIFT_DIY_DIR/logs/server.log 2>&1 &


source ${OPENSHIFT_REPO_DIR}.openshift/action_hooks/configenv
echo "Current ruby version: `ruby --version`"


echo "Starting Unicorn..."
ruby `gem which unicorn` -c ${OPENSHIFT_REPO_DIR}unicorn.rb -E production -D
